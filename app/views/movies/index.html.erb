<h3>List of movies</h3>
<%= link_to 'Add new movie', new_movie_path, class: 'btn btn-primary' %></p>

<table class="table table-striped table condensed">
  <thead>
      <tr>
        <td class="bold">Name</td>
        <td class="bold">Year</td>
        <td class="bold">Director</td>
        <td class="bold">Category</td>
        <td class="bold">Rating</td>
        <td class="bold">Actions</td>
      </tr>
  </thead>
  <tbody>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= movie.name %></td>
    <td><%= movie.year %></td>
    <td><%= movie.director %></td>
    <td><%= movie.category %></td>
    <td><%= movie.rating %></td>
    <td>
      <%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-small btn-success' %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>